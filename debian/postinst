#!/bin/sh
# postinst script for RabbitCommon
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

INSTALL_ROOT=/opt/RabbitCommon

case "$1" in
    configure)
        mkdir -p $INSTALL_ROOT/log
        chmod 777 $INSTALL_ROOT/log
        if [ ! -d $INSTALL_ROOT/bin/log ]; then
            ln -s $INSTALL_ROOT/log $INSTALL_ROOT/bin/log
        fi
        if [ ! -f /usr/share/applications/org.Rabbit.RabbitCommon.desktop ]; then
            ln -s ${INSTALL_ROOT}/share/applications/org.Rabbit.RabbitCommon.desktop /usr/share/applications/org.Rabbit.RabbitCommon.desktop
        fi
        if [ ! -f /usr/share/pixmaps/RabbitCommon.png ]; then
            if [ ! -d /usr/share/pixmaps ]; then
                mkdir -p /usr/share/pixmaps
            fi
            ln -s ${INSTALL_ROOT}/share/pixmaps/App.png /usr/share/pixmaps/RabbitCommon.png
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        rm -fr $INSTALL_ROOT/log $INSTALL_ROOT/bin/log
        rm -fr /usr/share/applications/org.Rabbit.RabbitCommon.desktop
        rm -fr /usr/share/pixmaps/RabbitCommon.png
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
